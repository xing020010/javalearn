<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="score.Score" table="score">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="score" type="java.lang.Integer">
			<column name="score" not-null="true" />
		</property>
		<property name="type" type="java.lang.String">
			<column name="type" length="20" not-null="true" />
		</property>

		<many-to-one name="student" cascade="save-update" class="student.Student"
			fetch="select">
			<column name="sid" not-null="true"></column>
		</many-to-one>
	</class>
</hibernate-mapping>